{
  "name": "aimet-asr-react-client",
  "type": "module",
  "private": false,
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/aimet-tech/aimet-asr-react-client"
  },
  "main": "./dist/aimet-asr-react-client.umd.js",
  "module": "./dist/aimet-asr-react-client.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/aimet-asr-react-client.es.js",
      "require": "./dist/aimet-asr-react-client.umd.js"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsc && vite build",
    "lint": "npx @biomejs/biome lint --write ./src",
    "format": "npx @biomejs/biome check --write --organize-imports-enabled=true ./src",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\""
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "dependencies": {},
  "peerDependencies": {
   "@types/react": "^18.0.0 || ^19.0.0",
    "@types/react-dom": "^18.0.0 || ^19.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@biomejs/biome": "2.0.4",
    "@tailwindcss/postcss": "4.1.10",
    "@tailwindcss/vite": "4.1.10",
    "@testing-library/react": "16.3.0",
    "@types/react": "^18.2.0", 
    "@types/react-dom": "^18.2.0",
    "@types/node": "24.0.3",
    "@vitejs/plugin-react": "4.5.2",
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "10.4.21",
    "babel-loader": "10.0.0",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "json": "11.0.0",
    "lint-staged": "16.1.2",
    "postcss": "8.5.6",
    "prop-types": "15.8.1",
    "tailwindcss": "4.1.10",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --files-ignore-unknown=true",
      "biome check --write --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched --files-ignore-unknown=true",
      "biome format --write --no-errors-on-unmatched"
    ]
  }
}
